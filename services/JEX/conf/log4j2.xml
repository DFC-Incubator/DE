<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="error" monitorInterval="15">
    <Appenders>
        <RollingFile name="RollingFile" fileName="/var/log/jex/jex.log" filePattern="/var/log/jex/$${date:yyyy-MM}/jex.log-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="250 MB" />
            </Policies>
            <DefaultRolloverStrategy max="10" />
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="warn">
            <AppenderRef ref="RollingFile" />
        </Root>

        <!-- Configuration Logging -->
        <Logger name="clojure-commons.config" level="info">
            <AppenderRef ref="RollingFile" />
        </Logger>

        <!-- Jargon Logging -->
        <Logger name="org.irods.jargon" level="debug">
            <AppenderRef ref="RollingFile" />
        </Logger>

        <!-- Service Call Trace Message Logging -->
        <Logger name="trace" level="trace">
            <AppenderRef ref="RollingFile" />
        </Logger>
    </Loggers>
</Configuration>
