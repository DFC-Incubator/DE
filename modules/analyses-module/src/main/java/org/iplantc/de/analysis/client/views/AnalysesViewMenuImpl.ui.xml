<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:menu="urn:import:com.sencha.gxt.widget.core.client.menu"
             xmlns:toolbar="urn:import:com.sencha.gxt.widget.core.client.toolbar"
             xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
             xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container">

    <ui:with field="icons"
             type="org.iplantc.de.resources.client.IplantResources"/>

    <ui:with field="strings"
             type="org.iplantc.de.resources.client.messages.IplantDisplayStrings"/>

    <container:SimpleContainer>
        <toolbar:ToolBar ui:field="menuBar">
            <button:TextButton ui:field="analysesTb"
                               text="Analyses">
                <button:menu>
                    <menu:Menu>
                        <menu:MenuItem ui:field="goToFolderMI"
                                       text="{strings.goToOutputFolder}"
                                       icon="{icons.folder}"
                                       enabled="false"/>
                        <menu:MenuItem ui:field="viewParamsMI"
                                       text="{strings.viewParamLbl}"
                                       icon="{icons.fileView}"
                                       enabled="false"/>
                        <menu:MenuItem ui:field="relaunchMI"
                                       text="{strings.relaunchAnalysis}"
                                       icon="{icons.run}"
                                       enabled="false"/>
                        <menu:MenuItem ui:field="cancelMI"
                                       text="{strings.cancelAnalysis}"
                                       icon="{icons.deleteIcon}"
                                       enabled="false"/>
                        <menu:MenuItem ui:field="deleteMI"
                                       text="{strings.delete}"
                                       icon="{icons.cancel}"
                                       enabled="false"/>
                    </menu:Menu>
                </button:menu>
            </button:TextButton>
            <button:TextButton ui:field="editTb"
                               text="Edit">
                <button:menu>
                    <menu:Menu>
                        <menu:MenuItem ui:field="renameMI"
                                       text="{strings.renameMenuItem}"
                                       icon="{icons.fileRename}"
                                       enabled="false"/>
                        <menu:MenuItem ui:field="updateCommentsMI"
                                       text="{strings.updateComments}"
                                       icon="{icons.userComment}"
                                       enabled="false"/>
                    </menu:Menu>
                </button:menu>
            </button:TextButton>
            <button:TextButton ui:field="refreshTb" text="{strings.refresh}" icon="{icons.refresh}" />
            <toolbar:FillToolItem/>

        </toolbar:ToolBar>
    </container:SimpleContainer>
</ui:UiBinder>