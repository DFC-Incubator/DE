<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:toolbar="urn:import:com.sencha.gxt.widget.core.client.toolbar"
             xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
             xmlns:menu="urn:import:com.sencha.gxt.widget.core.client.menu"
             xmlns:search="urn:import:org.iplantc.de.diskResource.client.search.views">

    <ui:with field="res"
             type="org.iplantc.de.resources.client.IplantResources"/>
    <ui:with field="display"
             type="org.iplantc.de.resources.client.messages.IplantDisplayStrings"/>
    <ui:with field="flexBoxData"
             type="com.sencha.gxt.widget.core.client.container.BoxLayoutContainer.BoxLayoutData">
        <ui:attributes flex="3" />
    </ui:with>


    <toolbar:ToolBar>
        <!-- Upload Menu -->
        <toolbar:child>
            <button:TextButton ui:field="uploadMenu"
                               text="{display.upload}"
                               icon="{res.importData}">
                <button:menu>
                    <menu:MenuItem ui:field="simpleUploadMi"
                                   text="{display.simpleUploadFromDesktop}"/>
                    <menu:MenuItem ui:field="bulkUploadMi"
                                   text="{display.bulkUploadFromDesktop}"/>
                    <menu:MenuItem ui:field="importFromUrlMi"
                                   text="Import From URL..."/>
                </button:menu>
            </button:TextButton>
        </toolbar:child>

        <!-- File Menu -->
        <toolbar:child>
            <button:TextButton ui:field="fileMenu"
                               text="File">
                <button:menu>
                    <menu:MenuItem ui:field="newWindowMi"
                                   text="{display.newWindow}"
                                   icon="{res.add}"/>
                    <menu:MenuItem ui:field="newWindowAtLocMi"
                                   text="New Data Window at this location"/>
                    <menu:MenuItem ui:field="newFolderMi"
                                   text="New Folder..."
                                   icon="{res.folderAdd}"/>
                    <menu:MenuItem ui:field="duplicateMi"
                                   text="Duplicate"/>
                    <menu:MenuItem ui:field="addToSideBarMi"
                                   text="Add to Sidebar"/>
                    <menu:MenuItem ui:field="newPlainTextFileMi"
                                   text="New Plain Text File..."/>
                    <menu:MenuItem ui:field="newTabularDataFileMi"
                                   text="New Tabular Data File..."/>
                    <menu:MenuItem ui:field="moveToTrashMi"
                                   text="Move to Trash"/>
                </button:menu>
            </button:TextButton>
        </toolbar:child>

        <!-- Edit Menu -->
        <toolbar:child>
            <button:TextButton ui:field="editMenu"
                               text="{display.edit}">
                <button:menu>
                    <menu:MenuItem ui:field="renameMi"
                                   text="Rename..."
                                   icon="{res.fileRename}"/>
                    <menu:MenuItem ui:field="editFileMi"
                                   text="Edit File..."/>
                    <menu:MenuItem ui:field="editCommentsMi"
                                   text="Edit Comments..."/>
                    <menu:MenuItem ui:field="editInfoTypeMi"
                                   text="Edit Information Type..."/>
                    <menu:MenuItem ui:field="metadataMi"
                                   text="{display.metadata}"
                                   icon="{res.metadata}"/>
                    <menu:MenuItem ui:field="moveMi"
                                   text="{display.move}"
                                   icon="{res.edit}"/>
                    <menu:MenuItem ui:field="deleteMi"
                                   text="{display.delete}"
                                   icon="{res.fileDelete}"/>
                </button:menu>
            </button:TextButton>
        </toolbar:child>

        <!-- Download Menu -->
        <toolbar:child>
            <button:TextButton ui:field="downloadMenu"
                               text="{display.download}">
                <button:menu>
                    <menu:MenuItem ui:field="simpleDownloadMi"
                                   text="Simple Download..."/>
                    <menu:MenuItem ui:field="bulkDownloadMi"
                                   text="Bulk Download..."/>
                </button:menu>
            </button:TextButton>
        </toolbar:child>

        <!-- Share Menu -->
        <toolbar:child>
            <button:TextButton ui:field="shareMenu"
                               text="{display.share}">
                <button:menu>
                    <menu:MenuItem ui:field="shareWithCollaboratorsMi"
                                   text="Share With Collaborators..."/>
                    <menu:MenuItem ui:field="createPublicLinkMi"
                                   text="Create a Public Link..."/>
                    <menu:MenuItem ui:field="sendToCogeMi"
                                   text="Send to CoGE"/>
                    <menu:MenuItem ui:field="sendToEnsemblMi"
                                   text="Send to Ensempl"/>
                    <menu:MenuItem ui:field="sendToTreeViewerMi"
                                   text="Send to Tree Viewer"/>
                </button:menu>
            </button:TextButton>
        </toolbar:child>

        <!-- Refresh button -->
        <toolbar:child>
            <button:TextButton ui:field="refreshButton"
                               text="{display.refresh}"/>
        </toolbar:child>

        <!-- Data Search box -->
        <toolbar:child layoutData="{flexBoxData}">
            <search:DiskResourceSearchField ui:field="searchField"/>
        </toolbar:child>


        <!-- Trash Menu -->
        <toolbar:child>
            <button:TextButton ui:field="trashMenu"
                               text="Trash">
                <button:menu>
                    <menu:MenuItem ui:field="openTrashMi"
                                   text="Open Trash"/>
                    <menu:MenuItem ui:field="restoreMi"
                                   text="{display.restore}"/>
                    <menu:SeparatorMenuItem/>
                    <menu:MenuItem ui:field="emptyTrashMi"
                                   text="{display.emptyTrash}"/>
                </button:menu>
            </button:TextButton>
        </toolbar:child>

    </toolbar:ToolBar>
</ui:UiBinder>