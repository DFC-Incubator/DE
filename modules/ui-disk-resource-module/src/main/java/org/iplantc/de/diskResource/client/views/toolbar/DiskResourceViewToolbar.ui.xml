<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:toolbar="urn:import:com.sencha.gxt.widget.core.client.toolbar"
             xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
             xmlns:menu="urn:import:com.sencha.gxt.widget.core.client.menu"
             xmlns:search="urn:import:org.iplantc.de.diskResource.client.search.views">

    <ui:with field="appearance"
             type="org.iplantc.de.diskResource.client.ToolbarView.Appearance"/>
    <ui:with field="flexBoxData"
             type="com.sencha.gxt.widget.core.client.container.BoxLayoutContainer.BoxLayoutData">
        <ui:attributes flex="3"/>
    </ui:with>


    <toolbar:ToolBar>
        <!-- Upload Menu -->
        <toolbar:child>
            <button:TextButton ui:field="uploadMenu"
                               text="{appearance.upload}">
                <button:menu>
                    <menu:Menu>
                        <menu:MenuItem ui:field="simpleUploadMi"
                                       icon="{appearance.importData}"
                                       text="{appearance.simpleUploadFromDesktop}"/>
                        <menu:MenuItem ui:field="bulkUploadMi"
                                       icon="{appearance.importData}"
                                       text="{appearance.bulkUploadFromDesktop}"/>
                        <menu:MenuItem ui:field="importFromUrlMi"
                                       icon="{appearance.importData}"
                                       text="{appearance.importFromUrlMenuItem}"/>
                    </menu:Menu>
                </button:menu>
            </button:TextButton>
        </toolbar:child>

        <!-- File Menu -->
        <toolbar:child>
            <button:TextButton ui:field="fileMenu"
                               text="File">
                <button:menu>
                    <menu:Menu>
                        <menu:MenuItem ui:field="newWindowMi"
                                       text="{appearance.newWindow}"
                                       icon="{appearance.add}"/>
                        <menu:MenuItem ui:field="newWindowAtLocMi"
                                       text="{appearance.newDataWindowAtLocMenuItem}"
                                       icon="{appearance.add}"/>
                        <menu:MenuItem ui:field="newFolderMi"
                                       text="{appearance.newFolderMenuItem}"
                                       icon="{appearance.folderAdd}"/>
                        <menu:MenuItem ui:field="duplicateMi"
                                       text="{appearance.duplicateMenuItem}"
                                       enabled="false"
                                       visible="false"/>
                        <menu:MenuItem ui:field="newFileMi" text="{appearance.create}"
                                       icon="{appearance.fileRename}">
                            <menu:submenu>
                                <menu:Menu ui:field="newFileMenu">
                                    <menu:MenuItem ui:field="newPlainTextFileMi"
                                                   text="{appearance.newPlainTextFileMenuItem}"
                                                   icon="{appearance.fileRename}"/>

                                    <menu:MenuItem ui:field="newTabularDataFileMi"
                                                   text="{appearance.newTabularDataFileMenuItem}"
                                                   visible="true"
                                                   icon="{appearance.fileRename}"/>

                                    <menu:MenuItem ui:field="newRFileMi"
                                                   text="New R Script..."
                                                   visible="true"
                                                   icon="{appearance.fileRename}"/>

                                    <menu:MenuItem ui:field="newPerlFileMi"
                                                   text="New Perl Script..."
                                                   visible="true"
                                                   icon="{appearance.fileRename}"/>

                                    <menu:MenuItem ui:field="newPythonFileMi"
                                                   text="New Python Script..."
                                                   visible="true"
                                                   icon="{appearance.fileRename}"/>

                                    <menu:MenuItem ui:field="newShellScriptFileMi"
                                                   text="New Shell Script..."
                                                   visible="true"
                                                   icon="{appearance.fileRename}"/>

                                    <menu:MenuItem ui:field="newMdFileMi"
                                                   text="New Markdown file..."
                                                   visible="true"
                                                   icon="{appearance.fileRename}"/>

                                    <menu:MenuItem ui:field="newPathListMi"
                                                   text="{appearance.newPathListMenuText}"
                                                   icon="{appearance.newPathListMenuIcon}"/>
                                </menu:Menu>
                            </menu:submenu>
                        </menu:MenuItem>


                        <menu:MenuItem ui:field="moveToTrashMi"
                                       text="{appearance.moveToTrashMenuItem}"
                                       icon="{appearance.trash}"
                                       enabled="false"/>
                    </menu:Menu>
                </button:menu>
            </button:TextButton>
        </toolbar:child>

        <!-- Edit Menu -->
        <toolbar:child>
            <button:TextButton ui:field="editMenu"
                               text="{appearance.edit}">
                <button:menu>
                    <menu:Menu>
                        <menu:MenuItem ui:field="renameMi"
                                       text="{appearance.renameMenuItem}"
                                       icon="{appearance.fileRename}"
                                       enabled="false"/>
                        <menu:MenuItem ui:field="editFileMi"
                                       text="{appearance.editFile}"
                                       icon="{appearance.fileRename}"
                                       enabled="false"/>
                        <menu:MenuItem ui:field="editCommentsMi"
                                       text="{appearance.editCommentsMenuItem}"
                                       enabled="false"
                                       icon="{appearance.userComment}"/>
                        <menu:MenuItem ui:field="editInfoTypeMi"
                                       text="{appearance.editInfoTypeMenuItem}"
                                       icon="{appearance.info}"
                                       enabled="false"/>
                        <menu:MenuItem ui:field="metadataMi"
                                       text="{appearance.metadataMenuItem}"
                                       icon="{appearance.metadata}"
                                       enabled="false"/>
                        <menu:MenuItem ui:field="moveMi"
                                       text="{appearance.moveMenuItem}"
                                       icon="{appearance.edit}"
                                       enabled="false"/>
                    </menu:Menu>
                </button:menu>
            </button:TextButton>
        </toolbar:child>

        <!-- Download Menu -->
        <toolbar:child>
            <button:TextButton ui:field="downloadMenu"
                               text="{appearance.download}">
                <button:menu>
                    <menu:Menu>
                        <menu:MenuItem ui:field="simpleDownloadMi"
                                       text="{appearance.simpleDownloadMenuItem}"
                                       icon="{appearance.download}"
                                       enabled="false"/>
                        <menu:MenuItem ui:field="bulkDownloadMi"
                                       text="{appearance.bulkDownloadMenuItem}"
                                       icon="{appearance.download}"
                                       enabled="false"/>
                    </menu:Menu>
                </button:menu>
            </button:TextButton>
        </toolbar:child>

        <!-- Share Menu -->
        <toolbar:child>
            <button:TextButton ui:field="shareMenu"
                               text="{appearance.share}">
                <button:menu>
                    <menu:Menu>
                        <menu:MenuItem ui:field="shareWithCollaboratorsMi"
                                       text="{appearance.shareWithCollaboratorsMenuItem}"
                                       icon="{appearance.share}"
                                       enabled="false"/>
                        <menu:MenuItem ui:field="createPublicLinkMi"
                                       text="{appearance.createPublicLinkMenuItem}"
                                       icon="{appearance.linkAdd}"
                                       enabled="false"/>
                        <menu:MenuItem ui:field="shareFolderLocationMi"
                                       text="{appearance.shareFolderLocationMenuItem}"
                                       icon="{appearance.folder}"
                                       enabled="false"/>
                        <menu:MenuItem ui:field="sendToCogeMi"
                                       text="{appearance.sendToCogeMenuItem}"
                                       icon="{appearance.arrowUp}"
                                       enabled="false"/>
                        <menu:MenuItem ui:field="sendToEnsemblMi"
                                       text="{appearance.sendToEnsemblMenuItem}"
                                       icon="{appearance.arrowUp}"
                                       enabled="false"/>
                        <menu:MenuItem ui:field="sendToTreeViewerMi"
                                       text="{appearance.sendToTreeViewerMenuItem}"
                                       icon="{appearance.arrowUp}"
                                       enabled="false"/>
                    </menu:Menu>
                </button:menu>
            </button:TextButton>
        </toolbar:child>

        <!-- Refresh button -->
        <toolbar:child>
            <button:TextButton ui:field="refreshButton"
                               text="{appearance.refresh}"
                               icon="{appearance.refresh}"
                               enabled="false"/>
        </toolbar:child>

        <!-- Data Search box -->
        <toolbar:child layoutData="{flexBoxData}">
            <search:DiskResourceSearchField
                    ui:field="searchField"/>
        </toolbar:child>


        <!-- Trash Menu -->
        <toolbar:child>
            <button:TextButton ui:field="trashMenu"
                               text="Trash">
                <button:menu>
                    <menu:Menu>
                        <menu:MenuItem ui:field="openTrashMi"
                                       text="{appearance.openTrashMenuItem}"
                                       icon="{appearance.trash}"/>
                        <menu:MenuItem ui:field="restoreMi"
                                       text="{appearance.restore}"
                                       enabled="false"/>
                        <menu:SeparatorMenuItem/>
                        <menu:MenuItem ui:field="emptyTrashMi"
                                       text="{appearance.emptyTrash}"
                                       icon="{appearance.trashEmpty}"/>
                        <menu:MenuItem ui:field="deleteMi"
                                       text="{appearance.delete}"
                                       icon="{appearance.fileDelete}"
                                       enabled="false"/>
                    </menu:Menu>
                </button:menu>
            </button:TextButton>
        </toolbar:child>

    </toolbar:ToolBar>
</ui:UiBinder>