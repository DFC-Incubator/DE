<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
             xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
             xmlns:views="urn:import:org.iplantc.de.diskResource.client">

    <ui:with field="DISPLAY"
             type="org.iplantc.de.resources.client.messages.IplantDisplayStrings"/>

    <!-- Main Panel -->
    <!-- ui:with field="listStore"
             type="com.sencha.gxt.data.shared.ListStore" />
    <ui:with field="cm"
             type="com.sencha.gxt.widget.core.client.grid.ColumnModel" />
    <ui:with field="gridView"
             type="com.sencha.gxt.widget.core.client.grid.LiveGridView">
        <ui:attributes forceFit="true"
                       autoFill="true" />
    </ui:with -->

    <!-- Border Layout Data -->
    <ui:with field="westMargins"
             type="com.sencha.gxt.core.client.util.Margins">
        <ui:attributes top="0" right="0" bottom="0" left="0" />
    </ui:with>
    <ui:with field="centerMargins"
             type="com.sencha.gxt.core.client.util.Margins">
        <ui:attributes top="0" right="0" bottom="0" left="0" />
    </ui:with>
    <ui:with field="northData"
             type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData">
        <ui:attributes size="30" maxSize="30" />
    </ui:with>
    <ui:with field="westData"
             type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData">
        <ui:attributes margins="{westMargins}"
                       size="175"
                       collapsible="false"
                       split="true" />
    </ui:with>
    <ui:with field="centerData"
             type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData">
        <ui:attributes margins="{centerMargins}"
                       size="1"
                       hidden="false" />
    </ui:with>
    <ui:with field="eastData"
             type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData">
        <ui:attributes size="190"
                       collapsible="true"
                       hidden="false" />
    </ui:with>
    <ui:with field="southData"
             type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData">
        <ui:attributes size="30"
                       hidden="true" />
    </ui:with>

    <ui:with field="detailsLayoutDataTop"
             type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData">
        <ui:attributes width="1" height="1" />
    </ui:with>
    <ui:with field="detailsLayoutDataBottom"
             type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData">
        <ui:attributes width="1" height="0.55" />
    </ui:with>

    <ui:with field="centerLayoutData"
             type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData">
        <ui:attributes height="1" width="1" margins="{centerMargins}" />
    </ui:with>

    <ui:with field="centerPathLayoutData"
             type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData">
        <ui:attributes height="25" width="1" margins="{centerMargins}" />
    </ui:with>

    <ui:with field="centerBottomBarLayoutData"
             type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData">
        <ui:attributes height="25" width="1" margins="{centerMargins}" />
    </ui:with>

    <container:BorderLayoutContainer ui:field="con"
                                     borders="true">
        <!-- Tool Bar -->
        <container:north layoutData="{northData}">
        </container:north>

        <!-- Navigation Panel -->
        <container:west layoutData="{westData}">
            <views:NavigationView ui:field="navigationView" />
        </container:west>

        <!-- Main Panel -->
        <container:center layoutData="{centerData}">
            <!-- gxt:ContentPanel ui:field="centerCp"
                              collapsible="false">
                <container:VerticalLayoutContainer
                        ui:field="centerPanel">
                    <container:child layoutData="{centerPathLayoutData}">
                        <form:FieldLabel HTML="&nbsp;Viewing"
                                         labelWidth="50"
                                         borders="true">
                            <form:widget>
                                <form:TextField ui:field="pathField"
                                                emptyText="You may enter the path to a folder here..."/>
                            </form:widget>
                        </form:FieldLabel>
                    </container:child>
                    <container:child layoutData="{centerLayoutData}">
                        <grid:Grid ui:field="grid"
                                   cm="{cm}"
                                   store="{listStore}"
                                   view="{gridView}" />
                    </container:child>
                    <container:child layoutData="{centerBottomBarLayoutData}">
                        <paging:ToolBar ui:field="pagingToolBar"/>
                    </container:child>
                </container:VerticalLayoutContainer>
            </gxt:ContentPanel -->
            <views:GridView ui:field="centerGridView" />
        </container:center>

        <!-- Details Panel -->
        <container:east layoutData="{eastData}">
            <gxt:ContentPanel headingText="{DISPLAY.details}">
                <container:VerticalLayoutContainer>
                    <container:child layoutData="{detailsLayoutDataTop}">
                        <container:VerticalLayoutContainer ui:field="detailsPanel"
                                                           adjustForScroll="true"
                                                           scrollMode="AUTOY" />
                    </container:child>
                </container:VerticalLayoutContainer>
            </gxt:ContentPanel>
        </container:east>

        <container:south layoutData="{southData}" />
    </container:BorderLayoutContainer>
</ui:UiBinder>