<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
             xmlns:menu="urn:import:com.sencha.gxt.widget.core.client.menu"
             xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
             xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
             xmlns:toolbar="urn:import:com.sencha.gxt.widget.core.client.toolbar"
             xmlns:analysis="urn:import:org.iplantc.de.client.analysis.widget">

    <ui:with
            field="icons"
            type="org.iplantc.de.resources.client.IplantResources"/>

    <ui:with
            field="strings"
            type="org.iplantc.de.resources.client.messages.IplantDisplayStrings"/>

    <container:SimpleContainer>
        <menu:MenuBar>
            <menu:MenuBarItem ui:field="analysesMI"
                              text="Analyses">
                <menu:menu>
                    <menu:Menu>
                        <menu:MenuItem ui:field="goToFolderMI"
                                       text="Go to Output Folder"/>
                        <menu:MenuItem ui:field="viewParamsMI"
                                       text="View Parameters"/>
                        <menu:MenuItem ui:field="relaunchMI"
                                       text="Relaunch"/>
                        <menu:MenuItem ui:field="cancelMI"
                                       text="Cancel"/>
                        <menu:MenuItem ui:field="deleteMI"
                                       text="Delete"/>
                    </menu:Menu>

                </menu:menu>

            </menu:MenuBarItem>
            <menu:MenuBarItem ui:field="editMI"
                              text="Edit">
                <menu:menu>
                    <menu:Menu>
                        <menu:MenuItem ui:field="renameMI"
                                       text="Rename"/>
                        <menu:MenuItem ui:field="updateCommentsMI"
                                       text="Update Comments..."/>
                    </menu:Menu>
                </menu:menu>

            </menu:MenuBarItem>

        </menu:MenuBar>
    </container:SimpleContainer>
</ui:UiBinder>