<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.0//EN"
        "http://google-web-toolkit.googlecode.com/svn/releases/2.0/distro-source/core/src/gwt-module.dtd">
<module>
<!--This module currently has a circular dependency with discovery environment module.
      FIXME: need to break this circular dependency
      Possibly by creating a DE core module. Then, the primary module will just be an entry point
      which references the desktop view.-->
    <inherits name='com.google.gwt.user.User'/>
    <inherits name="org.iplantc.de.discoveryenvironment"/>

    <replace-with class="org.iplantc.de.theme.base.client.desktop.BaseDesktopAppearance">
        <when-type-is class="org.iplantc.de.desktop.client.DesktopView.DesktopAppearance"/>
    </replace-with>

    <replace-with class="org.iplantc.de.theme.base.client.desktop.views.BaseFeedbackDialogAppearance">
        <when-type-is class="org.iplantc.de.desktop.client.views.widgets.DEFeedbackDialog.FeedbackAppearance"/>
    </replace-with>

    <replace-with class="org.iplantc.de.theme.base.client.desktop.views.BaseUnseenNotificationsAppearance">
        <when-type-is class="org.iplantc.de.desktop.client.views.widgets.UnseenNotificationsView.UnseenNotificationsAppearance"/>
    </replace-with>

    <replace-with class="org.iplantc.de.theme.base.client.desktop.views.taskbar.TaskBarBaseAppearance">
        <when-type-is class="org.iplantc.de.desktop.client.views.widgets.TaskBar.TaskBarAppearance"/>
    </replace-with>

    <replace-with class="org.iplantc.de.theme.base.client.desktop.views.taskButton.TaskButtonCellDefaultAppearance">
        <when-type-is class="org.iplantc.de.desktop.client.views.widgets.TaskButtonCell.TaskButtonCellAppearance"/>
    </replace-with>

    <replace-with class="org.iplantc.de.theme.base.client.window.IPlantGrayContentPanelAppearance">
        <when-type-is class="com.sencha.gxt.widget.core.client.ContentPanel.ContentPanelAppearance"/>
    </replace-with>

    <replace-with class="org.iplantc.de.theme.base.client.window.IplantBaseWindowAppearance">
        <when-type-is class="org.iplantc.de.desktop.client.views.windows.IplantWindowBase.IplantWindowAppearance"/>
    </replace-with>

    <replace-with class="org.iplantc.de.theme.base.client.window.AboutApplicationDefaultAppearance">
        <when-type-is class="org.iplantc.de.desktop.client.views.windows.AboutApplicationWindow.AboutApplicationAppearance"/>
    </replace-with>

    <replace-with class="org.iplantc.de.theme.base.client.window.AppEditorWindowBaseAppearance">
        <when-type-is class="org.iplantc.de.desktop.client.views.windows.AppEditorWindow.AppEditorAppearance"/>
    </replace-with>

    <!-- FileViewers -->
    <replace-with class="org.iplantc.de.theme.base.client.fileViewers.ViewerPagingToolBarDefaultAppearance">
        <when-type-is class="org.iplantc.de.fileViewers.client.views.ViewerPagingToolBar.ViewerPagingToolBarAppearance"/>
    </replace-with>

    <replace-with class="org.iplantc.de.theme.base.client.fileViewers.StructuredTextViewToolbarDefaultAppearance">
        <when-type-is class="org.iplantc.de.fileViewers.client.views.StructuredTextViewToolBar.StructureTextViewerToolbarAppearance"/>
    </replace-with>

    <replace-with class="org.iplantc.de.theme.base.client.fileViewers.TextViewToolBarDefaultAppearance">
        <when-type-is class="org.iplantc.de.fileViewers.client.views.TextViewToolBar.TextViewToolBarAppearance"/>
    </replace-with>

    <replace-with class="org.iplantc.de.theme.base.client.fileViewers.StructuredTextViewerDefaultAppearance">
        <when-type-is class="org.iplantc.de.fileViewers.client.views.StructuredTextViewer.StructuredTextViewerAppearance"/>
    </replace-with>

    <replace-with class="org.iplantc.de.theme.base.client.fileViewers.FileViewerPresenterDefaultAppearance">
        <when-type-is class="org.iplantc.de.fileViewers.client.FileViewer.FileViewerPresenterAppearance"/>
    </replace-with>

    <replace-with class="org.iplantc.de.theme.base.client.fileViewers.PathListViewerToolbarDefaultAppearance">
        <when-type-is class="org.iplantc.de.fileViewers.client.views.PathListViewerToolbar.PathListViewerToolbarAppearance"/>
    </replace-with>

    <replace-with class="org.iplantc.de.theme.base.client.fileViewers.PathListViewerDefaultAppearance">
        <when-type-is class="org.iplantc.de.fileViewers.client.views.PathListViewer.PathListViewerAppearance"/>
    </replace-with>

    <!-- Disk Resource Module -->
    <replace-with class="org.iplantc.de.theme.base.client.diskResource.DiskResourceViewToolbarDefaultAppearance">
        <when-type-is class="org.iplantc.de.diskResource.client.views.DiskResourceView.DiskResourceViewToolbarAppearance"/>
    </replace-with>
    <replace-with class="org.iplantc.de.theme.base.client.diskResource.dialogs.FolderSelectDialogDefaultAppearance">
        <when-type-is class="org.iplantc.de.diskResource.client.views.dialogs.FolderSelectDialog.FolderSelectDialogAppearance"/>
    </replace-with>
    <replace-with class="org.iplantc.de.theme.base.client.diskResource.dialogs.FileSelectDialogDefaultAppearance">
        <when-type-is class="org.iplantc.de.diskResource.client.views.dialogs.FileSelectDialog.FileSelectDialogAppearance"/>
    </replace-with>
    <replace-with class="org.iplantc.de.theme.base.client.diskResource.dialogs.FileFolderSelectDialogDefaultAppearance">
        <when-type-is class="org.iplantc.de.diskResource.client.views.dialogs.FileFolderSelectDialog.FileFolderSelectDialogAppearance"/>
    </replace-with>
    <replace-with class="org.iplantc.de.theme.base.client.diskResource.FileFolderSelectorFieldDefaultAppearance">
        <when-type-is class="org.iplantc.de.diskResource.client.views.widgets.FileFolderSelectorField.FileFolderSelectorFieldAppearance"/>
    </replace-with>
</module>
