###############################################################################
# Configuration Properties for Tool Integration Administrative Interface
###############################################################################

###############################################################################
# CAS Authentication Settings
###############################################################################
org.iplantc.admin.cas.base-url             = {{ cas_base }}
org.iplantc.admin.cas.server-name          = {{ belphegor_base }}
org.iplantc.admin.cas.validation           = /iplant-cas-ticket-validation
org.iplantc.admin.cas.proxy-receptor       = /iplant-cas-proxy-ticket-receptor
org.iplantc.admin.cas.logout-url           = /iplant-cas-logout
org.iplantc.admin.cas.app-name             = {{ belphegor_name }}
org.iplantc.admin.cas.authorized-groups    = {{ admin_groups }}
org.iplantc.admin.cas.group-attribute-name = {{ cas_group_attribute }}
org.iplantc.admin.cas.login-url            = /login
org.iplantc.admin.cas.no-logout-url        = {{ cas_no_logout_url }}
org.iplantc.admin.cas.app-list             = {{ cas_app_list }}

###############################################################################
# CAS Session Keepalive Settings
###############################################################################
org.iplantc.admin.keepalive.service  = {{ belphegor_base }}/belphegor/empty
org.iplantc.admin.keepalive.target   = {{ cas_base }}/login?service={{ belphegor_base }}/belphegor/empty
org.iplantc.admin.keepalive.interval = 90

###############################################################################
# Backend Services URL/Endpoint Configuration
#
###############################################################################
# this is the service-endpoint keys prefix
# (this value is utilized by classes/components in de-common-*.jar)
prefix = org.iplantc.services


#####################################################################
# this is for calling bootstrap from belphegor
#####################################################################
org.iplantc.services.admin.bootstrap = {{ donkey_base }}/secured/bootstrap

# URLs for individual back-end serivices.
org.iplantc.services.admin.apps                   = {{ donkey_base }}/admin/apps
org.iplantc.services.admin.apps.categories        = {{ donkey_base }}/admin/apps/categories
org.iplantc.services.apps                         = {{ donkey_base }}/apps
org.iplantc.services.apps.categories              = {{ donkey_base }}/apps/categories


# Reference Genomes Services
org.iplantc.services.admin.referenceGenomes       = {{ donkey_base }}/admin/reference-genomes
org.iplantc.services.referenceGenomes             = {{ donkey_base }}/reference-genomes

# Tool-Request Services
org.iplantc.services.toolRequests           = {{ donkey_base }}/admin/tool-requests

# System-Message Services
org.iplantc.services.admin.notifications.system       = {{ donkey_base }}/admin/notifications/system
org.iplantc.services.admin.notifications.system.types = {{ donkey_base }}/admin/notifications/system-types

###############################################################################
# Deployed Version Metadata
#
# This values are used since reading the MANIFEST.MF file from a deployed WAR
# is a tricky environment.
###############################################################################
org.iplantc.admin.about.defaultBuildNumber = {{ de_version_name }}
org.iplantc.admin.about.releaseVersion     = {{ de_version }}

###############################################################################
# Default Beta Category.
###############################################################################
org.iplantc.admin.category.defaultBetaAppCategoryId = {{ metadactyl_beta_category }}

###############################################################################
# Unique Identifier for Trash Category
###############################################################################
org.iplantc.admin.category.defaultTrashAppCategoryId = {{ metadactyl_trash_category }}

###############################################################################
# Enable / Disable right click for QA team. QA Team will use the right click functionality
# to access the context menu from some of their testing tools.
# Should be set to false in all environments other than QA
###############################################################################
org.iplantc.admin.contextMenu.enabled = {{ belphegor_enable_ctx }}

###############################################################################
# relative url path to apps documentation page
###############################################################################
org.iplantc.admin.validAppWikiUrlPath = {{ confluence_valid_wikiurl }}
